<div class="container-fluid pt-5 pb-2"> 
<p id="notice"><%= notice %></p>

<%= form_tag hospitals_path, method: 'get' do %>
  <p>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search", :hospi_name => nil %>
  </p>
<% end %>

    <div class="container">
      <h1>Les Liste des hopitaux disponibles</h1>
      <table class="table table-dark">
        <thead>
        <tr>
          <th>Hospi name</th>
          <th>Hospi adresse</th>
          <th colspan="3"></th>
         </tr>
        </thead>
        <tbody>
        <% @hospitals.each do |hospital| %>
          <tr>
            <td><%= hospital.hospi_name %></td>
            <td><%= hospital.hospi_adresse %></td>
            <td><%= link_to 'Show', hospital, class: "badge bg-success" %></td>
            <% if user_signed_in? %>
              <% if current_user.role? %>
                <td><%= link_to 'Edit', edit_hospital_path(hospital), class: "badge bg-warning"  %></td>
                <td><%= link_to 'Destroy', hospital, method: :delete, data: { confirm: 'Are you sure?' }, class: "badge bg-danger"  %></td>
              <%end%>
            <%end%>
          </tr>
        <% end %>
        </tbody>
      </table>
    </div>

<br>
<% if user_signed_in? %>
    <% if current_user.role? %>
       <%= link_to 'New Hospital', new_hospital_path, class: "badge bg-primary"  %>
    <%end%>
<%end%>

</div>